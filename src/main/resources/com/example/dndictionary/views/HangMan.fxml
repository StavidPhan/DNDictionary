        <GridPane id="mcGridPane1" prefHeight="54.0" prefWidth="1280.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button id="functionButton" mnemonicParsing="false" onAction="#switchBackToGameScene" prefHeight="34.0" prefWidth="46.0" text="Back" />
                <Label id="mcText" text="Score:" GridPane.columnIndex="1" />
                <Label id="mcText" fx:id="scoreBox" text="0" GridPane.columnIndex="1">
                    <padding>
                        <Insets left="70.0" />
                    </padding>
                </Label>
                <Label id="mcText" fx:id="resultBox" text="Correct?" GridPane.columnIndex="2" />
                <Button id="functionButton" mnemonicParsing="false" onAction="#initializeQuestion" prefHeight="0.0" prefWidth="104.0" text="Next Question" GridPane.columnIndex="3">
                    <GridPane.margin>
                        <Insets left="148.0" />
                    </GridPane.margin>
                </Button>
                <Button id="functionButton" mnemonicParsing="false" onAction="#end" text="Quit game" GridPane.columnIndex="4">
                    <GridPane.margin>
                        <Insets left="150.0" />
                    </GridPane.margin>
                </Button>
            </children>
