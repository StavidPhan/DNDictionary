                <Font name="Comic Sans MS" size="30.0" />
            </font>
        </Label>
        <Label fx:id="gameOver" layoutX="376.0" layoutY="120.0" prefHeight="45.0" prefWidth="563.0" style="-fx-background-color: transparent; -fx-padding: 0; -fx-alignment: center; -fx-font-size: 30px; -fx-wrap-text: true; -fx-text-fill: red;">
            <font>
                <Font name="Comic Sans MS" size="30.0" />
            </font>
        </Label>
        <Label fx:id="correctWord" layoutX="376.0" layoutY="165.0" prefHeight="45.0" prefWidth="563.0" style="-fx-background-color: transparent; -fx-padding: 0; -fx-alignment: center; -fx-font-size: 30px; -fx-wrap-text: true; -fx-text-fill: green;">
            <font>
                <Font name="Comic Sans MS" size="30.0" />
            </font>
        </Label>
        <TextArea fx:id="suggestBox" layoutX="420.0" layoutY="407.0" prefHeight="108.0" prefWidth="478.0" editable="false" style="-fx-alignment: center; -fx-font-size: 26px; -fx-wrap-text: true;"/>
        <TextField fx:id="guessChar" layoutX="460.0" layoutY="576.0" prefHeight="46.0" prefWidth="410.0" styleClass="rounded-search-box" promptText="Enter the letter you guessed..." style="-fx-font-size: 20px;"/>
