        <ImageView fx:id="healthImage" fitHeight="46.0" fitWidth="173.0" layoutX="1093.0" layoutY="78.0" preserveRatio="true" GridPane.columnIndex="2">
            <image>
                <Image url="@../pictures/threeHeart.png" />
            </image>
        </ImageView>
        <Label fx:id="guessWord" layoutX="376.0" layoutY="250.0" prefHeight="80.0" prefWidth="563.0" style="-fx-background-color: transparent; -fx-padding: 0; -fx-alignment: center; -fx-font-size: 60px;">
